    "faker": "^3.0.1",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.4",
    "json": "^9.0.4",
    "latest-version-cli": "^1.0.0",
    "mocha": "^2.4.5",
    "semantic-release": "^6.0.0"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
