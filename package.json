  "devDependencies": {
    "apidoc": "^0.16.1",
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.0",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-object-rest-spread": "^6.0.0",
    "babel-plugin-transform-strict-mode": "^6.0.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
