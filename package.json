  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-users/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-users#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "bunyan": "^1.6.0",
    "bytes": "^2.4.0",
    "common-errors": "^0.5.7",
    "disposable-email-domains": "^1.0.8",
    "flake-idgen": "^1.1.0",
    "ioredis": "^2.2.0",
    "jsonwebtoken": "^7.0.1",
    "lodash": "^4.5.0",
    "moment": "^2.14.1",
    "ms-amqp-transport": "^3.1.0",
    "ms-conf": "^2.1.0",
    "ms-mailer-client": "^3.0.0",
    "ms-mailer-templates": "^0.7.0",
    "ms-validation": "^2.0.0",
    "mservice": "^2.6.0",
    "node-uuid": "^1.4.7",
    "password-generator": "^2.0.2",
    "redis-filtered-sort": "^1.2.0",
    "request-promise": "^3.0.0",
    "scrypt": "^6.0.1",
    "urlsafe-base64": "^1.0.0"
