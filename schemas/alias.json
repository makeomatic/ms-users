{
    "$id": "alias",
    "type": "object",
    "required": [
        "username",
        "alias"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1
        },
        "alias": {
            "type": "string",
            "minLength": 3,
            "maxLength": 15,
            "pattern": "[a-zA-Z.0-9]+"
        }
    }
}