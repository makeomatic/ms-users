{
    "$id": "challenge",
    "type": "object",
    "required": [
        "type",
        "username"
    ],
    "properties": {
        "type": {
            "type": "string",
            "const": "email"
        },
        "username": {
            "type": "string",
            "minLength": 1
        },
        "remoteip": {
            "type": "string",
            "format": "ipv4"
        },
        "metadata": {
            "type": "object"
        }
    }
}