{
  "id": "common.json",
  "definitions": {
    "filter": {
      "type": "object",
      "properties": {
        "#multi": {
          "type": "object",
          "required": [ "fields", "match" ],
          "properties": {
            "fields": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "match": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      },
      "patternProperties": {
        "^.+$": {
          "oneOf": [
            {
              "type": "string",
              "minLength": 1
            },
            {
              "type": "object",
              "minProperties": 1,
              "maxProperties": 2,
              "properties": {
                "patternProperties": {
                  "^(ne|eq|match)$": {
                    "type": "string",
                    "minLength": 1
                  },
                  "^(gte|lte)$": {
                    "type": "number"
                  },
                  "^(exists|isempty)$": {
                    "type": "boolean",
                    "constant": true
                  }
                }
              }
            }
          ]
        }
      }
    },
    "challengeType": {
      "description": "Challenge type",
      "enum": ["email", "phone"],
      "type": "string"
    },
    "userId": {
      "type": "string",
      "oneOf": [
        { "pattern": "\\+\\d{10}" },
        { "format": "email" }
      ]
    }
  }
}
