{
  "$id": "config",
  "type": "object",
  "required": [
    "amqp",
    "redis",
    "deleteInactiveAccounts",
    "jwt",
    "validation",
    "passwordValidator",
    "server",
    "mailer",
    "pwdReset",
    "hooks",
    "token",
    "phone",
    "rateLimiters"
  ],
  "properties": {
    "deleteInactiveAccounts": {
      "type": "integer",
      "minimum": 0
    },
    "admins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "format": "email"
          },
          "password": {
            "type": "string",
            "minLength": 18
          },
          "firstName": {
            "type": "string",
            "minLength": 1
          },
          "lastName": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "registrationLimits": {
      "type": "object",
      "properties": {
        "ip": {
          "type": "object",
          "properties": {
            "time": {
              "type": "integer",
              "minimum": 0
            },
            "times": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "noDisposable": {
          "type": "boolean"
        },
        "checkMX": {
          "type": "boolean"
        }
      }
    },
    "pwdReset": {
      "type": "object",
      "properties": {
        "length": {
          "type": "integer",
          "minimum": 6,
          "maximum": 30
        },
        "memorable": {
          "type": "boolean"
        }
      }
    },
    "redis": {
      "type": "object",
      "required": [
        "options"
      ],
      "properties": {
        "options": {
          "type": "object",
          "required": [
            "keyPrefix"
          ],
          "properties": {
            "keyPrefix": {
              "type": "string",
              "minLength": 1,
              "pattern": ".*{.*}.*"
            },
            "redisOptions": {
              "type": "object",
              "properties": {
                "keyPrefix": {
                  "type": "string",
                  "minLength": 1,
                  "pattern": ".*{.*}.*"
                }
              }
            }
          }
        }
      }
    },
    "logger": {
      "type": "object"
    },
    "captcha": {
      "required": [
        "secret",
        "uri",
        "ttl"
      ],
      "type": "object",
      "properties": {
        "secret": {
          "type": "string",
          "minLength": 1
        },
        "ttl": {
          "type": "integer",
          "minimum": 1
        },
        "uri": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "jwt": {
      "type": "object",
      "required": [
        "hashingFunction",
        "secret",
        "ttl",
        "defaultAudience",
        "issuer"
      ],
      "properties": {
        "hashingFunction": {
          "type": "string"
        },
        "secret": {
          "type": "string",
          "minLength": 32
        },
        "ttl": {
          "type": "integer",
          "minimum": 0
        },
        "defaultAudience": {
          "type": "string",
          "minLength": 1
        },
        "issuer": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "validation": {
      "type": "object",
      "required": [
        "paths",
        "subjects",
        "email",
        "senders",
        "templates"
      ],
      "properties": {
        "paths": {
          "type": "object",
          "required": [
            "activate",
            "reset"
          ],
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            }
          }
        },
        "senders": {
          "required": [
            "activate",
            "reset",
            "password"
          ],
          "type": "object",
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        },
        "subjects": {
          "required": [
            "activate",
            "reset",
            "password"
          ],
          "type": "object",
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        },
        "templates": {
          "type": "object",
          "properties": {
            "activate": {
              "type": "string"
            },
            "reset": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        },
        "email": {
          "oneOf": [{
              "type": "string",
              "minLength": 1
            },
            {
              "type": "object"
            }
          ]
        }
      }
    },
    "passwordValidator": {
      "type": "object",
      "required": [
        "enabled",
        "minStrength",
        "inputFieldNames"
      ],
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": "false"
        },
        "minStrength": {
          "type": "integer",
          "default" : 4,
          "minimum": 0,
          "maximum": 4
        },
        "forceCheckFieldNames": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "skipCheckFieldNames": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        },
        "inputFieldNames": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": []
        }
      }
    },
    "server": {
      "required": [
        "proto",
        "host",
        "port"
      ],
      "type": "object",
      "properties": {
        "proto": {
          "type": "string",
          "enum": [
            "http",
            "https"
          ]
        },
        "host": {
          "type": "string"
        },
        "port": {
          "oneOf": [{
              "type": "string"
            },
            {
              "type": "integer"
            }
          ]
        }
      }
    },
    "mailer": {
      "type": "object",
      "required": [
        "prefix",
        "routes"
      ],
      "properties": {
        "prefix": {
          "type": "string",
          "minLength": 1
        },
        "routes": {
          "type": "object",
          "properties": {
            "adhoc": {
              "type": "string",
              "minLength": 1
            },
            "predefined": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "hooks": {
      "type": "object"
    },
    "payments": {
      "type": "object"
    },
    "token": {
      "type": "object",
      "required": [
        "erase",
        "email",
        "phone"
      ],
      "properties": {
        "erase": {
          "type": "boolean",
          "default": false
        },
        "email": {
          "type": "object",
          "required": [
            "secret",
            "throttle",
            "ttl"
          ],
          "properties": {
            "secret": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "length": {
                  "type": "integer",
                  "minimum": 0
                },
                "encrypt": {
                  "type": "boolean"
                }
              }
            },
            "ttl": {
              "type": "integer",
              "minimum": 0
            },
            "throttle": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "phone": {
          "type": "object",
          "required": [
            "secret",
            "throttle",
            "ttl"
          ],
          "properties": {
            "secret": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "type": {
                  "type": "string"
                },
                "length": {
                  "type": "integer",
                  "minimum": 0
                },
                "encrypt": {
                  "type": "boolean"
                }
              }
            },
            "ttl": {
              "type": "integer",
              "minimum": 0
            },
            "throttle": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "phone": {
      "type": "object",
      "required": [
        "account",
        "messages",
        "prefix"
      ],
      "properties": {
        "account": {
          "type": "string"
        },
        "messages": {
          "type": "object",
          "patternProperties": {
            "^.+$": {
              "type": "string"
            }
          }
        },
        "prefix": {
          "type": "string"
        }
      }
    },
    "oauth": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "token": {
          "type": "object",
          "required": [
            "hashingFunction",
            "secret",
            "issuer"
          ],
          "properties": {
            "hashingFunction": {
              "type": "string"
            },
            "secret": {
              "type": "string"
            },
            "issuer": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            }
          }
        },
        "providers": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["clientId", "clientSecret"],
            "additionalProperties": true,
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false
              },
              "retryOnMissingPermissions": {
                "type": "boolean"
              },
              "clientId": {
                "type": "string",
                "minLength": 1
              },
              "clientSecret": {
                "type": "string",
                "minLength": 1
              },
              "location": {
                "type": "string",
                "minLength": 1
              },
              "domain": {
                "type": "string",
                "minLength": 1
              },
              "scope": {
                "anyOf": [{
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  },
                  "minItems": 1
                }, {
                  "type": "string",
                  "pattern": "^(?:[._,]?[a-zA-Z]+)+$"
                }],
                "default": "email"
              },
              "scopeSeparator": {
                "type": "string",
                "minLength": 1
              },
              "password": {
                "type": "string"
              },
              "forceHttps": {
                "type": "boolean",
                "default": false
              },
              "isSecure": {
                "type": "boolean",
                "default": false
              },
              "isSameSite": {
                "oneOf": [{
                  "type": "string",
                  "enum": ["Lax", "Strict"]
                }, {
                  "type": "boolean",
                  "const": false
                }]
              },
              "apiVersion": {
                "type": "string"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "profileHandler": {
                "type": "object"
              }
            }
          }
        }
      },
      "if": {
        "properties": { "enabled": { "const": true } }
      },
      "then": {
        "required": ["token", "providers"],
        "properties": {
          "token": {
            "properties": {
              "secret": {
                "minLength": 32
              },
              "providers": {
                "minProperties": 1,
                "additionalProperties": {
                  "if": {
                    "properties": { "enabled": { "const": true } }
                  },
                  "then": {
                    "properties": {
                      "password": {
                        "minLength": 32
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "rateLimiters": {
      "type": "object",
      "required": [
        "userLogin"
      ],
      "properties": {
        "userLogin" : {
          "$ref": "#/definitions/userLoginRateLimiter"
        }
      }
    },
    "cfList": {
      "$ref": "#/definitions/cfList"
    }
  },
  "definitions": {
    "slidingWindowRateLimiter": {
      "type": "object",
      "required": [
        "windowInterval",
        "windowLimit",
        "blockInterval"
      ],
      "properties": {
        "windowInterval": {
          "type": "integer",
          "minimum": 0
        },
        "windowLimit": {
          "type": "integer",
          "minimum": 1
        },
        "blockInterval": {
          "type": "integer",
          "minimum": 0
        }
      },
      "if" : {
        "properties": {
          "windowInterval": {
            "const": 0
          }
        }
      },
      "then": {
        "properties": {
          "blockInterval": {
            "const": 0
          }
        }
      },
      "else": {
        "properties": {
          "blockInterval": {
            "minimum": 1
          }
        }
      }
    },
    "userLoginRateLimiter": {
      "type": "object",
      "required": [
        "enabled",
        "limitIp",
        "limitUserIp"
      ],
      "properties":{
        "enabled": {
          "type": "boolean"
        },
        "limitIp": {
          "$ref": "#/definitions/slidingWindowRateLimiter"
        },
        "limitUserIp": {
          "$ref": "#/definitions/slidingWindowRateLimiter"
        }
      }
    },
    "cfList": {
      "type": "object",
      "description": "Cloudflare account and access list configuration",
      "additionalProperties": false,
      "required": [ "enabled" ],
      "if": {"properties": { "enabled": { "const": true } } },
      "then": { "required": [ "auth", "accessList", "worker" ] },
      "properties": {
        "enabled": { "type": "boolean" },
        "auth": {
          "anyOf": [
            {
              "type": "object",
              "additionalProperties": false,
              "required": [ "token" ],
              "properties": {
                "token": { "type": "string", "minLength": 10, "maxLength": 128 }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "required": ["serviceKey"],
              "properties": {
                "serviceKey": { "type": "string", "minLength": 10, "maxLength": 128 }
              }
            },
            {
              "type": "object",
              "additionalProperties": false,
              "required": [ "email", "key" ],
              "properties": {
                "email": { "type": "string", "format": "email" },
                "key": { "type": "string", "minLength": 10, "maxLength": 128 }
              }
            }
          ]
        },
        "accessList": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "accountId", "ttl", "listCacheTTL" ],
          "properties": {
            "accountId": { "type": "string", "minLength": 10, "maxLength": 128 },
            "ttl": { "type": "number", "minimum": 5000 },
            "listCacheTTL": { "type": "number", "minimum": 45000 }
          }
        },
        "worker": {
          "type": "object",
          "additionalProperties": false,
          "required": [ "cleanupInterval", "concurrency", "enabled" ],
          "properties": {
            "enabled": { "type": "boolean" },
            "cleanupInterval": { "type": "number", "minimum": 60000 },
            "concurrency": { "type": "number", "minimum": 1 }
          }
        }
      }
    }
  }
}
