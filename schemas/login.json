{
  "id": "login",
  "type": "object",
  "required": [ "username", "password", "audience" ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 4,
      "maxLength": 50
    },
    "audience": {
      "type": "string",
      "minLength": 1
    },
    "remoteip": {
      "type": "string",
      "format": "ipv4"
    },
    "isDisposablePassword": {
      "default": false,
      "type": "boolean"
    },
    "isSSO": {
      "default": false,
      "type": "boolean"
    }
  }
}
