{
    "$id": "login",
    "type": "object",
    "required": [
        "username",
        "audience"
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
        },
        "password": {
            "type": "string",
            "minLength": 1
        },
        "audience": {
            "type": "string",
            "minLength": 1
        },
        "remoteip": {
            "type": "string",
            "format": "ipv4"
        },
        "isDisposablePassword": {
            "default": false,
            "type": "boolean"
        },
        "isSSO": {
            "default": false,
            "type": "boolean"
        },
        "isOAuthFollowUp": {
            "default": false,
            "type": "boolean"
        }
    },
    "if": {
        "required": ["isOAuthFollowUp"],
        "properties": { "isOAuthFollowUp": { "const": true } }
    },
    "then": {
        "required": ["password"],
        "properties": {
            "password": {
                "maxLength": 8192
            }
        }
    },
    "else": {
        "properties": {
            "password": {
                "maxLength": 50
            }
        }
    }
}
