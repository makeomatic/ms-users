{
  "$id": "oauth.upgrade",
  "type": "object",
  "required": ["provider", "token"],
  "properties": {
    "provider": {
      "type": "string",
      "enum": ["facebook", "apple"]
    },
    "token": {
      "type": "string",
      "maxLength": 512,
      "minLength": 1
    },
    "jwt": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512
    },
    "isStatelessAuth": {
      "type": "boolean"
    },
    "authCode": {
      "description": "Used for `apple` provider to select right redirect url.",
      "type": "boolean"
    }
  }
}
