{
  "type": "object",
  "required": [ "username", "password", "audience" ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 50
    },
    "captcha": {
      "type": "object",
      "required": [ "response", "remoteip" ],
      "properties": {
        "response": {
          "type": "string",
          "minLength": 1
        },
        "remoteip": {
          "type": "string",
          "format": "ipv4"
        },
        "secret": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "metadata": {
      "type": "object",
      "minProperties": 1
    },
    "activate": {
      "type": "boolean"
    },
    "audience": {
      "type": "string",
      "minLength": 1
    }
  }
}