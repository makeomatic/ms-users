{
  "$id": "register",
  "type": "object",
  "required": [
    "username",
    "audience"
  ],
  "properties": {
    "username": {
      "$ref": "common.json#/definitions/userId"
    },
    "alias": {
      "$ref": "common.json#/definitions/alias"
    },
    "password": {
      "type": "string",
      "password": true
    },
    "activate": {
      "type": "boolean"
    },
    "captcha": {
      "$ref": "common.json#/definitions/captcha"
    },
    "metadata": {
      "type": "object",
      "minProperties": 1
    },
    "audience": {
      "type": "string",
      "minLength": 1
    },
    "inviteToken": {
      "type": "string",
      "minLength": 1
    },
    "ipaddress": {
      "$ref": "common.json#/definitions/remoteip"
    },
    "skipChallenge": {
      "type": "boolean"
    },
    "skipPassword": {
      "default": false,
      "type": "boolean"
    },
    "challengeType": {
      "default": "email",
      "$ref": "common.json#/definitions/challengeType"
    },
    "referral": {
      "type": "string"
    },
    "sso": {
      "type": "string"
    },
    "isStatelessAuth": {
      "type": "boolean",
      "default": false
    }
  }
}
