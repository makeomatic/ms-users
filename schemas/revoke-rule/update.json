{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "revoke-rule.update",
  "type": "object",
  "required": [ "rule" ],
  "additionalProperties": false,
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1
    },
    "rule": {
      "type": "object",
      "required": [ "params" ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "type": "object",
          "description": "Rule spec for Radix filter",
          "minProperties": 1
        }
      }
    }
  }
}
