{
  "type": "object",
  "$id": "updateMetadata",
  "properties": {
    "username": {
      "$ref": "#/definitions/username"
    }
  },
  "anyOf": [
    {
      "required": [ "username", "audience", "metadata" ],
      "properties": {
        "audience": {
          "type": "string",
          "minLength": 1
        },
        "metadata": {
          "$ref": "#/definitions/metadata"
        }
      }
    },
    {
      "required": [ "username", "audience", "metadata" ],
      "properties": {
        "audience": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "metadata": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/metadata"
          }
        }
      }
    },
    {
      "required": [ "username", "audience", "script" ],
      "properties": {
        "audience": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "script": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^.+$": {
              "type": "object",
              "required": ["lua"],
              "properties": {
                "lua": {
                  "type": "string",
                  "minLength": 1
                },
                "argv": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "metadata": {
      "type": "object",
      "minProperties": 1,
      "properties": {
        "$set": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^.+$": {
              "oneOf": [
                {
                  "type": "string",
                  "minLength": 1
                },
                {
                  "type": "array"
                },
                {
                  "type": "object"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "number"
                }
              ]
            }
          }
        },
        "$remove": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "$incr": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^.+$": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}
