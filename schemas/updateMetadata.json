{
  "id": "updateMetadata",
  "type": "object",
  "required": [ "username", "audience", "metadata" ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 3,
      "maxLength": 50
    },
    "anyOf": [
      {
        "audience": {
          "type": "string",
          "minLength": 1
        },
        "metadata": {
          "$ref": "#/definitions/metadata"
        }
      },
      {
        "audience": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "metadata": {
          "type": "array",
          "minItems": {
            "$data": "1/audience#"
          },
          "maxItems": {
            "$data": "1/audience#"
          },
          "items": {
            "$ref": "#/definitions/metadata"
          }
        }
      }
    ]
  },
  "definitions": {
    "metadata": {
      "type": "object",
      "properties": {
        "$set": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^.+$": {
              "oneOf": [
                {
                  "type": "string",
                  "minLength": 1
                },
                {
                  "type": "array"
                },
                {
                  "type": "object"
                },
                {
                  "type": "boolean"
                },
                {
                  "type": "number"
                }
              ]
            }
          }
        },
        "$remove": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "$incr": {
          "type": "object",
          "minProperties": 1,
          "patternProperties": {
            "^.+$": {
              "type": "integer"
            }
          }
        }
      },
      "anyOf": [
        {
          "required": [ "$set" ]
        },
        {
          "required": [ "$remove" ]
        },
        {
          "required": [ "$incr" ]
        }
      ]
    }
  }
}