{
    "$id": "updatePassword",
    "type": "object",
    "oneOf": [
        {
            "required": [
                "username",
                "currentPassword",
                "newPassword"
            ]
        },
        {
            "required": [
                "resetToken",
                "newPassword"
            ]
        }
    ],
    "properties": {
        "username": {
            "type": "string",
            "minLength": 3,
            "maxLength": 50
        },
        "resetToken": {
            "type": "string",
            "minLength": 1
        },
        "currentPassword": {
            "type": "string"
        },
        "newPassword": {
            "type": "string"
        },
        "invalidateTokens": {
            "type": "boolean"
        },
        "remoteip": {
            "type": "string",
            "format": "ipv4"
        }
    }
}