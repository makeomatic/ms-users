{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "verify-request-signature",
  "type": "object",
  "required": [
      "request",
      "audience"
  ],
  "properties": {
      "request": {
          "type": "object",
          "required": [ "url", "method", "headers" ],
          "properties": {
            "url": { "type": "string" },
            "method": { "type": "string" },
            "headers": {
              "type": "object"
            },
            "params": {
              "type": "object"
            }
          }
      },
      "audience": {
          "oneOf": [
              {
                  "type": "string",
                  "minLength": 1
              },
              {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                      "type": "string",
                      "minLength": 1
                  }
              }
          ]
      }
  }
}
